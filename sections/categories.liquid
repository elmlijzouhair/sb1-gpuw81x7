<div class="categories-section section-padding">
  <div class="page-width">
    <div class="section-header text-center">
      <h2>{{ section.settings.title }}</h2>
    </div>

    <div class="grid">
      {% for block in section.blocks %}
        <div class="grid__item medium-up--one-half" {{ block.shopify_attributes }}>
          <div class="category-card">
            <a href="{{ block.settings.link }}">
              <div class="category-card__image-wrapper">
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 800 | image_tag: 
                    class: 'category-card__image',
                    alt: block.settings.title
                  }}
                {% else %}
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'category-card__image' }}
                {% endif %}
              </div>
              <div class="category-card__info">
                <h3 class="category-card__title">{{ block.settings.title }}</h3>
              </div>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Categories",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shop by Category"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Category Name",
          "default": "Category"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Categories",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}