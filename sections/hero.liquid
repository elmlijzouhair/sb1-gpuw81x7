{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero relative h-screen">
  <div class="absolute inset-0">
    {% if section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 2000 | image_tag: 
        loading: 'eager',
        class: 'w-full h-full object-cover',
        alt: section.settings.heading
      }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
    {% endif %}
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full flex items-center">
    <div class="text-white max-w-2xl">
      <h1 class="text-6xl font-serif font-bold mb-6">{{ section.settings.heading }}</h1>
      <p class="text-xl mb-10 leading-relaxed">{{ section.settings.subtext }}</p>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="inline-block bg-transparent border-2 border-white text-white px-10 py-4 text-lg font-medium hover:bg-white hover:text-black transition-all duration-300">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Art of Leather Craftsmanship"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover the finest Moroccan leather artistry, where tradition meets contemporary design. Each piece tells a story of heritage and excellence."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}